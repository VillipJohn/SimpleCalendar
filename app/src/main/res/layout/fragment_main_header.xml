<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.villip.simplecalendar.ui.MainHeaderFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="&lt;"
                android:id="@+id/btn_previous_month"
                android:layout_weight="1"
                android:background="@color/material_blue_grey_900"
                android:textColor="@color/bright_foreground_disabled_material_dark"
                android:textSize="50sp"
                android:gravity="center_vertical|center"
                android:paddingBottom="7dp"
                android:onClick="onClickBtnPreviousMonth"
                android:layout_gravity="center_vertical" />

            <Spinner
                android:id="@+id/months_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:spinnerMode="dialog"
                android:layout_weight="3"
                android:nestedScrollingEnabled="true"
                android:background="@color/material_blue_grey_900"
                tools:layout="@layout/spinner_header"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=">"
                android:id="@+id/btn_next_month"
                android:layout_weight="1"
                android:textSize="50sp"
                android:textColor="@color/bright_foreground_disabled_material_dark"
                android:background="@color/material_blue_grey_900"
                android:paddingBottom="7dp"
                android:onClick="onClickBtnNextMonth" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/days_of_week"
            android:background="@color/material_blue_grey_900"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
